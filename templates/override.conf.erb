[Service]
# Protect against privilege escalation
NoNewPrivileges=true
# Writes to hardware or system clock will be denied
ProtectClock=true
# changing hostname or domainname is prevented
ProtectHostname=true
# /usr /boot /etc read-only
ProtectSystem=full
# /home read-only
ProtectHome=true
# Kernel variables acessible through /proc/sys /sys (and some other /proc folders) are read-only
ProtectKernelTunables=true
# Explicit module loading is prevented
ProtectKernelModules=true
# /sys/fs/cgroup is read-only
ProtectControlGroups=true
# New FS namespace and mount private /tmp and /var/tmp
PrivateTmp=true
# Access to any kind of namespacing is prohibited
RestrictNamespaces=true
# adding u+s or g+s is prohibited
RestrictSUIDSGID=true
# Locks down personality sys call
LockPersonality=true
# Creating or using writable+executable memory mapping is prohibited
MemoryDenyWriteExecute=true
# Realtime scheduling is prohibited
RestrictRealtime=true
# Remove some sys calls
SystemCallFilter=~@clock @module @mount @raw-io @reboot @swap @cpu-emulation @obsolete
# Remove all capabilities
CapabilityBoundingSet=
# Allow specific type of sockets
RestrictAddressFamilies=AF_UNIX AF_INET AF_INET6 AF_IB AF_NETLINK
# Only allow native sys calls & sys calls on
SystemCallArchitectures=native
# Change default umask
UMask=0027
